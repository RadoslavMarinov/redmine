<h1>Sorted products</h1>
<h1>Sort = <%= @sort %></h1>

<table onclick="me()">
    <tr>
        <th>
            <%= link_to  "Title", products_sorted_path(sort: "title") %>
        </th>
        <th>
            <%= link_to  "Price", products_sorted_path(sort: "price") %>
            price
        </th>
        <th>
            Amount
        </th>
        <th>
            Released
        </th>
        <th>
            Issue
        </th>
    </tr>
<% @products.each do |product| %>
    <tr>
        <td><%= product.title %></td>
        <td><%= product.price %></td>
        <td><%=product.amount%></td>
        <td><%=product.release_date%></td>
        <td><%=product.issue_id%></td>
    </tr>
<% end %>
</table >